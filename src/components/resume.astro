---
import { ResumeCard } from "@/components/ui/resume-card";
---

<div id="resume" class="mx-auto px-0 text-lg text-primary-foreground">
    <section class="flex flex-col items-center justify-center">
        <h1 class="text-4xl font-bold text-primary-foreground mb-6 text-center">
            Resume
        </h1>
        <div class="max-w-screen-md mx-auto p-4 w-full">
            <div class="mb-5">
                <ResumeCard
                    client:load
                    title="Senior Manager, Business Intelligence"
                    company="Octane11"
                    duration="May 2022 - Present"
                    skills="Product Management, Agile Methodology, Data Analysis, Data Visualization"
                    bullets={[
                        "Led development of AI-powered chatbot assistant, managing the entire product lifecycle from conception to launch",
                        "Designed and implemented data normalization processes that improved data quality by 35%",
                    ]}
                    promotions={[
                        {
                            title: "Martech Operations Associate",
                            duration: "August 2021 - May 2022",
                            bullets: [
                                "Created user-facing tools that increased client satisfaction scores by 25%",
                                "Collaborated with engineering team to translate business requirements into technical specifications",
                            ],
                        },
                    ]}
                />
            </div>

            <div class="mb-5">
                <ResumeCard
                    client:load
                    title="Marketing Segmentation and Business Analyst"
                    company="Financial Center First Credit Union"
                    duration="August 2019 - August 2021"
                    skills="SQL, Tableau, Python, Data Analysis, Data Visualization"
                    bullets={[
                        "Developed and maintained SQL queries to support marketing segmentation and reporting",
                        "Created Tableau dashboards to visualize marketing campaign performance and customer behavior",
                        "Utilized Python for data cleaning and preparation, improving data quality for analysis",
                    ]}
                />
            </div>
            <div>
                <ResumeCard
                    client:load
                    title="Program Manager"
                    company="Loyalty Research Center"
                    duration="June 2018 - August 2019"
                    skills="Microsoft Excel, IBM SPSS, Client Presentation, Qualtrics"
                    bullets={[
                        "Developed and maintained SQL queries to support marketing segmentation and reporting",
                        "Created Tableau dashboards to visualize marketing campaign performance and customer behavior",
                        "Utilized Python for data cleaning and preparation, improving data quality for analysis",
                    ]}
                />
            </div>
        </div>
    </section>
</div>
