---
import { Socials } from "@/components/ui/socials";
---

<div class="max-w-md mx-auto px-4 text-lg text-primary-foreground">
    <section
        class="flex flex-col items-center justify-center text-center pt-40"
    >
        <h1 class="text-4xl font-bold text-primary-foreground">
            hi, I'm Becky üëã
        </h1>
        <p class="text-lg text-primary-foreground mt-3">
            I'm <span id="typed-text"></span>
        </p>
    </section>

    <section class="flex flex-col items-center justify-center text-center mt-3">
        <p class="text-lg text-primary-foreground mb-8">
            Creating and launching things that matter.
        </p>
        
        <div class="relative group">
            <div
                class="absolute -inset-0.5 bg-gradient-to-r from-primary to-secondary rounded-full blur opacity-75 group-hover:opacity-100 transition duration-300"
            ></div>
            <div
                class="relative size-36 rounded-full overflow-hidden border-2 border-background"
            >
                <img 
                    src="/images/headshot/becky-headshot.jpeg" 
                    alt="Becky's Profile" 
                    class="w-full h-full object-cover scale-125 object-[center_top]"
                    loading="lazy"
                    decoding="async"
                />
            </div>
        </div>
    </section>
    <section class="flex flex-col items-center justify-center text-center mt-3">
        <Socials />
    </section>
</div>

<style>
    .typewriter-cursor {
        display: inline-block;
        margin-left: 2px;
        animation: blink 0.7s infinite;
    }

    @keyframes blink {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }
</style>

<script>
    import EmojiTypewriter from "../lib/emoji-typewriter.js";

    // Initialize the typewriter when the DOM is loaded
    document.addEventListener("DOMContentLoaded", () => {
        const element = document.getElementById("typed-text");

        if (element) {
            const typewriter = new EmojiTypewriter({
                words: [
                    "a curious creator ‚ö°",
                    "a product architect üìê",
                    "a relentless problem solver üîç",
                    "a systems thinker üîÑ",
                ],
                typeSpeed: 50,
                deleteSpeed: 30,
                delaySpeed: 2500,
                loop: true,
                cursor: true,
                cursorChar: "|",
                cursorBlinkSpeed: 700,
            });

            typewriter.init(element);
        }
    });
</script>
