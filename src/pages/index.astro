import Hero from '@/components/hero.astro';
import About from '@/components/about.astro';
import MainLayout from '@/layouts/main.astro';
import Projects from '@/components/projects.astro';
import Resume from '@/components/resume.astro';
---

<MainLayout title="Becky's Portfolio">
	<div id="top" class="mb-0">
		<Hero />
	</div>
	<section id="about-section" class="py-20">
		<About />
	</section>
	<section id="projects-section" class="py-20">
		<Projects />
	</section>
	<section id="resume-section" class="py-20">
		<Resume />
	</section>
	<section id="contact-section" class="py-20">
		<div class="container mx-auto">
			<h2 class="text-3xl font-bold">Contact</h2>
			<!-- Contact content -->
		</div>
	</section>
</MainLayout>
