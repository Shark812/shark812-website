---
// Component Imports
import Hero from '@/components/hero.astro';
import MainLayout from '@/layouts/main.astro';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<MainLayout title="Astro + TailwindCSS">
	<div id="top">
		<Hero />
	</div>
	<section id="about" class="min-h-screen py-20">
		<div class="container mx-auto">
			<h2 class="text-3xl font-bold">About</h2>
			<!-- About content -->
		</div>
	</section>
	<section id="projects" class="min-h-screen py-20">
		<div class="container mx-auto">
			<h2 class="text-3xl font-bold">Projects</h2>
			<!-- Projects content -->
		</div>
	</section>
	<section id="resume" class="min-h-screen py-20">
		<div class="container mx-auto">
			<h2 class="text-3xl font-bold">Resume</h2>
			<!-- Resume content -->
		</div>
	</section>
	<section id="contact" class="min-h-screen py-20">
		<div class="container mx-auto">
			<h2 class="text-3xl font-bold">Contact</h2>
			<!-- Contact content -->
		</div>
	</section>
</MainLayout>
